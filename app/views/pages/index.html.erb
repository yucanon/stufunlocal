        <div class="container">

        <%= search_form_for @search, url: search_path do |f| %>
          
          <div class="col-xs-10 col-md-11" style="padding-right: 0px">
            <%= f.select :genre_eq_any, [["IT","IT"], ["コンサルタント","コンサルタント"], ["営業","営業"]], {:include_blank=>"得意な分野から検索",:selected => session[:genre_eq_any]},{required: 'true', autofocus: 'true', class: 'form-control'} %>
          </div>
          <%end%>

          <div class="col-xs-2 col-md-1" style="padding-left: 0px; ">
            <%= submit_tag "検索", class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>

