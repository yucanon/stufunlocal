<!-- patial just render single message -->
<% if message.moneygift.blank? %>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-2 text-center row-space-1">
                <%if message.user.image != nil %>
                <%= image_tag message.user.image, class: "profile-full img-circle" %>
                <%else%>
                <%= image_tag ("avatar-default.png"),class:"img-circle profile-1" %>
              <% end %>
                <br>
                <strong><%= message.user.name %></strong> 
            </div>

            <div class="col-md-8">
                <%= message.body %>
            </div>

            <div class="col-md-2">
                <span class="pull-right"><%= message.message_time %></span> 
            </div>
        </div>
    </div>
</div>
<% end %>